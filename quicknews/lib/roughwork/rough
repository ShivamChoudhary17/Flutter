BottomAppBar(
            color: Colors.white,
            elevation: 10.0,
            child: Row(
              children: <Widget>[
                // Bottom that pops up from the bottom of the screen.
                IconButton(
                  icon: Icon(Icons.menu),
                  onPressed: () {
                    showModalBottomSheet<Null>(
                      context: context,
                      builder: (BuildContext context) => openBottomDrawer(),
                    );
                  },
                ),
                IconButton(
                  icon: const Icon(Icons.search),
                  onPressed: () {
                    Navigator.push(context,
                        MaterialPageRoute(builder: (context) => SearchPage()));
                  },
                ), /*
                IconButton(
                  icon: const Icon(Icons.more_vert),
                  onPressed: () {},
                ),*/
              ],
            )),


 //This drawer is opened in modal bottom sheet
  Widget openBottomDrawer() {
    return Drawer(elevation: 10.0,
      child: Column(
        children:  const <Widget>[
          Center(heightFactor: 10,
            child: Text("Made With 'â£' and Flutter",
            style: TextStyle(fontWeight: FontWeight.bold,
            fontSize: 20
            ),
            ),
          ),
          Text('Shivam Choudhary',
            style: TextStyle(fontWeight: FontWeight.bold,
            fontSize: 18
            ),
            ),
        ],
      ),
    );
  }








